# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Login page
GET     /                           controllers.WelcomeController.welcome

# Profile page
GET     /profile                    controllers.ProfileController.profile

# My Trips page
GET     /mytrips                    controllers.MyTripsController.trips

# Other people page
GET     /people                     controllers.PeopleController.people

# Plan a Trip page
GET     /plan                       controllers.PlanTripsController.plan
POST    /plan                       controllers.PlanTripsController.saveDestination(request: Request)

# Sign up page
GET     /signup                     controllers.SignUpController.signUp
POST    /signup                     controllers.SignUpController.save(request: Request)

# Select Travel Type page
GET     /travel-type                controllers.TravellerTypeController.select
POST    /travel-type                controllers.TravellerTypeController.finish(request: Request)

# Widgets
GET     /widgets                    controllers.WidgetController.listWidgets(request: Request)
POST    /widgets                    controllers.WidgetController.createWidget(request: Request)

# Computers list (look at the default values for pagination parameters)
GET     /computers                  controllers.HomeController.list(request: Request, p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")

# Add computer
GET     /computers/new              controllers.HomeController.create(request: Request)
POST    /computers                  controllers.HomeController.save(request: Request)

# Edit existing computer
GET     /computers/:id              controllers.HomeController.edit(request: Request, id:Long)
POST    /computers/:id              controllers.HomeController.update(request: Request, id:Long)

# Delete a computer
POST    /computers/:id/delete       controllers.HomeController.delete(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

