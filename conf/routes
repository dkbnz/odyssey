# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# To convert
DELETE  /api/profile/:id                controllers.ProfileController.delete(request: Request, id: Long)
PATCH   /api/trip/:id                   controllers.trips.TripController.edit(request: Request, id: Long)

# Get lists
GET     /v1/travtypes                   controllers.TravellerTypeController.list()
GET     /v1/nationalities               controllers.NationalityController.list()

# Authentication
POST    /v1/login                       controllers.AuthController.login(request: Request)
POST    /v1/logout                      controllers.AuthController.logout()
POST    /v1/checkUsername               controllers.ProfileController.checkUsername(request: Request)

# Profile
GET     /v1/profile                     controllers.ProfileController.fetch(request: Request)
PUT     /v1/profile                     controllers.ProfileController.update(request: Request)
GET     /v1/profiles                    controllers.ProfileController.list(request: Request)
POST    /v1/profiles                    controllers.ProfileController.create(request: Request)

# Destinations
GET     /v1/destinations                controllers.destinations.DestinationController.fetch(request: Request)
POST    /v1/destinations                controllers.destinations.DestinationController.save(request: Request)
GET     /v1/destinationTypes            controllers.destinations.DestinationController.getTypes()

# Trips
GET     /v1/trip:id                     controllers.trips.TripController.fetchAll(id: Long)
POST    /v1/trip                        controllers.trips.TripController.create(request: Request)
GET     /v1/trip                        controllers.trips.TripController.fetch(request: Request)
GET     /v1/trips/all                   controllers.trips.TripController.fetchAll(id: Long)
DELETE  /v1/trip/:id                    controllers.trips.TripController.destroy(request: Request, id: Long)

# Map static resources from the /public folder to the file resource paths
GET        /*file        controllers.Assets.at(path="/public", file)
