# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET             /                                       controllers.HomeController.index

# Profiles listProfiles (look at the default values for pagination parameters)
GET             /profiles                               controllers.ProfileController.list(s: String ?= null)

# Attempt profile login
POST            /profiles/login                         controllers.ProfileController.attemptLogin(request: Request)

# View a single profile
GET             /profiles/:id                           controllers.ProfileController.view(id: Long, s: String ?= null)

# Add profile
POST            /profiles                               controllers.ProfileController.save(request: Request)

# Delete a profile
DELETE          /profiles/:id/delete                    controllers.ProfileController.destroy(id:Long)

# Add traveller type
POST            /addtraveller                           controllers.ProfileController.addTravellerType(request: Request)

# Delete a traveller type
DELETE          /travtype/delete/:id/:travId            controllers.ProfileController.removeTravellerType(id: Long, travId: Long)

# Map static resources from the /public folder to the /assets URL path
GET             /assets/*file                           controllers.Assets.at(path="/public", file)

# Destinations page
GET     /destinations               controllers.DestinationController.index()

# Add destination
GET     /destinations/create         controllers.DestinationController.create()
POST    /destinations/create         controllers.DestinationController.save(request: Request)

#Delete a destination
DELETE  /destinations/delete/:id        controllers.DestinationController.destroy(id: Long)

#Update a destination
PUT     /destinations/edit         controllers.DestinationController.edit(request: Request)
